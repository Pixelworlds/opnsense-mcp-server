{
  "name": "@richard-stovall/opnsense-mcp-server",
  "version": "0.2.1",
  "description": "Comprehensive MCP server for OPNsense firewall management with 300+ tools",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richard-stovall/opnsense-mcp-server.git"
  },
  "homepage": "https://github.com/richard-stovall/opnsense-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/richard-stovall/opnsense-mcp-server/issues"
  },
  "bin": "./dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "node --watch dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "opnsense",
    "mcp",
    "model-context-protocol",
    "firewall",
    "api",
    "automation",
    "typescript"
