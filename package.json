{
  "name": "@richard-stovall/opnsense-mcp-server",
  "version": "0.1.2",
  "description": "A comprehensive OPNsense MCP server exposing all OPNsense API routes as tools, built with TypeScript and Yarn.",
  "main": "./dist/lib.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "type": "module",
  "bin": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs",
      "types": "./dist/lib.d.ts"
    },
    "./src": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.cjs",
      "types": "./dist/src/index.d.ts"
    },
    "./types": {
      "types": "./dist/lib.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "start": "tsx index.ts",
    "dev": "tsx watch index.ts",
    "help": "tsx index.ts --help",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "type-check": "tsc --noEmit",
    "pack": "yarn pack"
  },
  "author": "Richard Stovall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/richard-stovall/opnsense-mcp-server.git"
  },
  "keywords": [
    "opnsense",
    "firewall",
    "yarn",
    "typescript",
    "mcp",
    "api",
    "server"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/node": "^24.0.4",
    "rollup": "^4.44.0",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@richard-stovall/opnsense-typescript-client": "^0.1.3",
    "zod": "^3.25.67"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.9.2+sha256.ca4310f8ba997b4643a000ce512d9772e01c1485df35511114b325315960acb7"
}
