{
  "name": "@richard-stovall/opnsense-mcp-server",
  "version": "0.1.1",
  "description": "A comprehensive OPNsense MCP server exposing all OPNsense API routes as tools, built with Bun and TypeScript.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "opnsense-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --hot index.ts",
    "help": "bun run index.ts --help",
    "build": "bun build index.ts --outdir dist --target node",
    "build:watch": "bun build index.ts --outdir dist --target node --watch"
  },
  "author": "Richard Stovall",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/richard-stovall/opnsense-mcp-server.git"
  },
  "keywords": [
    "opnsense",
    "firewall",
    "bun",
    "typescript",
    "mcp",
    "api",
    "server"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.25.67",
    "@richard-stovall/opnsense-typescript-client": "^0.1.3"
  },
  "peerDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
